    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch development",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["next", "dev"],
            "env": {
                "TARGET_ENVIRONMENT": "development"
            },
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Launch staging",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["next", "dev"],
            "env": {
                "TARGET_ENVIRONMENT": "staging"
            },
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Launch production",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["next", "dev"],
            "env": {
                "TARGET_ENVIRONMENT": "production"
            },
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
    ]
}